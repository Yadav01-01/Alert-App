<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_select"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.main.HealthFragment">

    <RelativeLayout
        android:id="@+id/lay_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/back_icon"
                android:padding="@dimen/_5sdp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="#000000"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/health_alerts" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lay_appbar"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_above="@id/btn_set_alert"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/self_alerts"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#0B0202" />
                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#0B0202"
                    android:layout_marginTop="@dimen/_6sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_alerts"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#777777"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#0B0202"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_6sdp" />

            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/btn_set_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_alerts"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/button_bg"/>



    <include
        layout="@layout/sadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>