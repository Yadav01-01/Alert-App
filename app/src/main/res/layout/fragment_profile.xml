<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/instructions_screen"
    tools:context=".fragment.auth.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/layheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_myprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:text="@string/my_profile" />
                <RelativeLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/tv_myprofile"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_18sdp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        app:civ_border_width="@dimen/_2sdp"
                        app:civ_border_color="#FF1A69B4"
                        android:src="@drawable/user_img_icon" />
                    <ImageView
                        android:id="@+id/img_upload"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/upload_icon"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">
                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_name"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@null"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_email"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/email_status"
                    android:textSize="@dimen/_14sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/email_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_green_tick"
                    android:visibility="visible" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlemailverified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvemailstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Verified"
                    android:textColor="#000000" />

            </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:gravity="center_vertical">

            <!-- Country Code Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_42sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bg_segment_container"
                android:layout_marginEnd="2dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:ccp_showFlag="true"
                    app:ccp_showNameCode="false"
                    app:ccp_showPhoneCode="false"
                    app:ccp_showArrow="true" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_phone"
                    android:textSize="@dimen/_14sdp"
                    android:layout_toLeftOf="@+id/phone_status"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/phone_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_cancel_red_icon"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlphoneverified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvphonestatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Verified"
                    android:textColor="#000000" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">
                <!-- <EditText
                     android:id="@+id/ed_address"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:hint="@string/enter_address"
                     android:singleLine="true"
                     android:textSize="@dimen/_14sdp"
                     android:paddingHorizontal="@dimen/_10sdp"
                     android:background="@null" />-->
                <AutoCompleteTextView
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:hint="@string/enter_address" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/imgCheckUncheckRemember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/uncheck_blue_tick_icon" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="#000000"
                            android:fontFamily="@font/urbanist_medium"
                            android:text="@string/agree_to_the"/>

                        <TextView
                            android:id="@+id/termAndCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="#FF0F87CD"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:text="@string/terms_conditions1"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="#000000"
                        android:fontFamily="@font/urbanist_medium"
                        android:text="@string/privacy_policy"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_bg"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>