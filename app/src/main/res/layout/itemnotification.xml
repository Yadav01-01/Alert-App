<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/id_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center|top"
            android:src="@drawable/dummy_image" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="center|start"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@+id/tv_time"
                        android:text="Alex Linderson"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="center|start"
                        android:text="2 min ago"
                        android:textColor="#717984"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/urbanist_semibold"
                        android:gravity="center|start"
                        android:text="Alert: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/alertText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="center|start"
                        android:text="Medical Alert"
                        android:textColor="#717984"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/urbanist_semibold"
                        android:gravity="center|start"
                        android:text="@string/relation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="center|start"
                        android:text=" Dad"
                        android:textColor="#717984"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_nelit"
                    android:textColor="#717984"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_below="@id/id_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#474747"/>
</RelativeLayout>