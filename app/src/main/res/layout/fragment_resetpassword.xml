<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.auth.ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/sign_logo_main">

            <ImageView
                android:id="@+id/imageBackReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/back_white"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-60dp"
            android:background="@drawable/top_corner_radius"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Reset Password"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_22sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/circular_main_bg">
                        <ImageView
                            android:id="@+id/imageCreatePassword"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/password_icon" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/etCreateNewPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:layout_toLeftOf="@id/lay_hide"
                                android:inputType="textPassword"
                                android:fontFamily="@font/urbanist_medium"
                                android:hint="Create New Password"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textColorHint="@color/light_black"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_14sdp" />

                            <RelativeLayout
                                android:id="@+id/lay_hide"
                                android:layout_width="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/eyeIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/eye_icon"
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="@dimen/_25sdp"
                                    app:tint="@color/light_black" />

                                <ImageView
                                    android:id="@+id/eyehideIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/password_hide"
                                    android:layout_marginEnd="@dimen/_25sdp"
                                    app:tint="@color/light_black" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/circular_main_bg">
                        <ImageView
                            android:id="@+id/imageConfirmPassword"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/password_icon" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/etConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:layout_toLeftOf="@id/lay_cnfhide"
                                android:inputType="textPassword"
                                android:fontFamily="@font/urbanist_medium"
                                android:hint="Confirm New Password"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textColorHint="@color/light_black"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_14sdp" />

                            <RelativeLayout
                                android:id="@+id/lay_cnfhide"
                                android:layout_width="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/eyecnfIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/eye_icon"
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="@dimen/_25sdp"
                                    app:tint="@color/light_black" />

                                <ImageView
                                    android:id="@+id/eyecnfhideIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/password_hide"
                                    android:layout_marginEnd="@dimen/_25sdp"
                                    app:tint="@color/light_black" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvResetButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/jost"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:gravity="center"
                        android:background="@drawable/button_bg"/>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>