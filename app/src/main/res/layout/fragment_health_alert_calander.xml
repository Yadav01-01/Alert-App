<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_select"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.main.HealthAlertCalanderFragment">

    <RelativeLayout
        android:id="@+id/lay_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/back_icon"
                android:padding="@dimen/_5sdp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="#000000"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/health_alerts" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/btn_set_alert"
        android:layout_below="@id/lay_appbar"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rlDt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_border">

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:hint="@string/select_date"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/light_black"
                    android:textSize="@dimen/_10sdp"
                    app:drawableEndCompat="@drawable/calander_send_icon" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="#FFFFFF"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calender_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/DialogTheme"
                    android:visibility="visible"
                    app:mcv_selectionMode="range"
                    app:mcv_showOtherDates="decorated_disabled" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_border">
                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Time"
                    android:textColor="@color/light_black"
                    android:gravity="center|start"
                    android:background="@null"
                    android:textSize="@dimen/_10sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:fontFamily="@font/urbanist_medium"
                    app:drawableEndCompat="@drawable/clock_send_alert_icon" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:background="@drawable/bg_border">
                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select End Time"
                    android:textColor="@color/light_black"
                    android:gravity="center|start"
                    android:background="@null"
                    android:textSize="@dimen/_10sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:fontFamily="@font/urbanist_medium"
                    app:drawableEndCompat="@drawable/clock_send_alert_icon" />
            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:gravity="center|start"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/urbanist_semibold"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:text="Notes" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_border">

                <EditText
                    android:id="@+id/ed_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Your Message here...."
                    android:textColor="#58585A"
                    android:gravity="center|start|top"
                    android:background="@null"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_8sdp"
                    android:textColorHint="#58585A"
                    android:fontFamily="@font/urbanist_medium"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btn_set_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/button_bg"/>

    <include
        layout="@layout/sadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>