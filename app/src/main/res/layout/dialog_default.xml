<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/alert_dialog_box_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/cross_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/pana_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help Text "
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="22sp"
            android:fontFamily="@font/urbanist_bold" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum Lorem ipsum dolor \nsit amet, consectetur adipiscing \nelit. Sed vel mauris sed sapien \nbibendum rutrum vitae non augue. \nNullam interdum sem."
            android:textColor="@color/light_black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:fontFamily="@font/urbanist_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox"
                android:layout_marginTop="@dimen/_10sdp"

                android:background="@color/transparent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include your current location"
                android:textColor="@color/light_black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:textAlignment="center"
                android:fontFamily="@font/urbanist_medium"
                android:drawablePadding="@dimen/_10sdp" />


        </LinearLayout>




       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tvSend"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginEnd="@dimen/_5sdp"
               android:layout_marginBottom="@dimen/_20sdp"
               android:textSize="@dimen/_13sdp"
               android:background="@drawable/delete_bg_button"
               android:gravity="center"
               android:text="Send"
               android:textColor="@color/white" />

           <TextView
               android:id="@+id/tvEdit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Edit"
               android:textSize="@dimen/_13sdp"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginBottom="@dimen/_20sdp"
               android:textColor="#000000"
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_gravity="center"
               android:gravity="center"
               android:background="@drawable/bg_no"/>
       </LinearLayout>
    </LinearLayout>


</RelativeLayout>