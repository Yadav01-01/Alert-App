<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_dialog_box_bg">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/cross_icon"/>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/allow_location_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/urbanist_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/allow_maps_to_access_your_location_while_you_use_the_app"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/urbanist_medium"/>

        <TextView
            android:id="@+id/tvAllowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/allow_bg_blue"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Allow"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvSkipForNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip For Now"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:background="@drawable/skip_bg"/>
    </LinearLayout>

</RelativeLayout>