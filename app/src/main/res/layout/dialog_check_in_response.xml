<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/alert_dialog_box_bg"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/cross_icon"/>

        <TextView
            android:id="@+id/tvAlertUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert By: Joe Goldburg"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist_bold"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_20sdp">

            <EditText
                android:id="@+id/ed_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Lorem Ipsum Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vel mauris sed sapien bibendum rutrum vitae non augue. Nullam interdum sem."
                android:textColor="@color/light_black"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:background="@null"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/urbanist_medium"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/respond"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/delete_bg_button"/>

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="#000000"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_no"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/responded"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="#6D6D6D"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/disable_bg_color"/>
            <TextView
                android:id="@+id/tvRespondedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/responded_date_amp_time_08_31_2024_09_20"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="#6D6D6D"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>