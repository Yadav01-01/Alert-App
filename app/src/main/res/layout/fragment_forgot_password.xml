<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.auth.ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/sign_logo_main">

            <ImageView
                android:id="@+id/imageBackForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/back_white"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-60dp"
            android:background="@drawable/top_corner_radius"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_25sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/bg_segment_container">

                        <!-- Email -->
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/urbanist_medium"
                            android:textSize = "18.sp"
                            android:text="Email"
                            android:textColor="@android:color/white"
                            android:textStyle="normal"
                            android:background="@drawable/bg_segment_selected"/>

                        <!-- Phone -->
                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Phone"
                            android:textSize="18.sp"
                            android:textColor="@android:color/black"
                            android:textStyle="normal"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Forgot Password"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_22sdp" />

                    <RelativeLayout
                        android:id="@+id/layoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:visibility="gone"
                        android:background="@drawable/circular_main_bg">

                        <ImageView
                            android:id="@+id/imageEmail"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/email_phone_icon" />

                        <EditText
                            android:id="@+id/etForgotEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_6sdp"
                            android:layout_toEndOf="@+id/imageEmail"
                            android:background="@null"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center_vertical"
                            android:hint="Enter your registered email/phone"
                            android:singleLine="true"
                            android:textColorHint="@color/light_black"
                            android:text=""
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layoutPhone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:gravity="center_vertical">

                        <!-- Country Code Container -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/bg_segment_container"
                            android:layout_marginEnd="8dp">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/ccp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                app:ccp_showFlag="true"
                                app:ccp_showNameCode="false"
                                app:ccp_showPhoneCode="false"
                                app:ccp_showArrow="true" />
                        </LinearLayout>

                        <!-- Phone Number Field -->
                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_segment_container"
                            android:paddingHorizontal="14dp"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center_vertical"
                            android:hint="+1 (406) 555-0120"
                            android:maxLength="10"
                            android:inputType="phone"
                            android:textColor="@color/light_black"
                            android:textColorHint="@color/light_black"
                            android:textSize="@dimen/_14sdp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvForgotButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:textSize="@dimen/_13sdp"
                        android:background="@drawable/button_bg"
                        android:fontFamily="@font/jost"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/white" />


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>