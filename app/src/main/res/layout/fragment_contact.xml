<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_select"
    tools:context=".fragment.auth.ContactFragment">

    <RelativeLayout
        android:id="@+id/lay_appbar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:id="@+id/tv_myprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:text="@string/added_contacts" />
    </RelativeLayout>

   <LinearLayout
       android:id="@+id/lay_search"
       android:layout_below="@id/lay_appbar"
       android:layout_width="match_parent"
       android:layout_margin="@dimen/_10sdp"
       android:layout_height="@dimen/_35sdp"
       android:background="@drawable/search_field">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:hint="@string/search"
           android:drawablePadding="@dimen/_10sdp"
           android:paddingStart="@dimen/_10sdp"
           android:singleLine="true"
           android:textColorHint="#8E8E93"
           android:id="@+id/etSearch"
           android:drawableStart="@drawable/icon_search"
           android:paddingEnd="@dimen/_10sdp"
           android:background="@null"/>
   </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@id/lay_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#474747"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_rcy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_above="@id/lay_bottom"
        android:layout_below="@id/view"/>

    <LinearLayout
        android:id="@+id/lay_bottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/bg_button"/>

        <TextView
            android:id="@+id/btnproceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proceed"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:background="@drawable/bg_button"/>

    </LinearLayout>
</RelativeLayout>