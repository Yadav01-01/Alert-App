<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_select"
    tools:context=".fragment.main.HomeFragment">
    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/three_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/three_line"/>

        <LinearLayout
            android:id="@+id/lay_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/lay_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/trailing_icon"/>

            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/trailing_icon_notification"/>

        </LinearLayout>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/viewScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_15sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/appbar">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:scaleType="center"
            android:background="@drawable/home_image"/>
        <LinearLayout
            android:layout_marginTop="-40dp"
            android:layout_width="match_parent"
            android:background="@drawable/details_bg"
            android:layout_height="match_parent">
            <!--<ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_15sdp">-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/lay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="@string/are_you_okay"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:id="@+id/tv_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/urbanist_semibold"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="@dimen/_13sdp"
                            android:textSize="@dimen/_13sdp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tvOK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/yes"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center"
                                android:background="@drawable/delete_bg_button"/>

                            <TextView
                                android:id="@+id/tvNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:textColor="#000000"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/bg_no"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|top"
                        android:visibility="gone"
                        android:id="@+id/lay_yes">
                        <ImageView
                            android:id="@+id/img_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/cuate"/>

                        <TextView
                            android:id="@+id/tv_heading_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_bold"
                            android:text="BRB!"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />

                        <TextView
                            android:id="@+id/tv_title_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:textAlignment="center"
                            android:text="We are here for you."
                            android:textColor="#6E6E6E"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tv_subtitle_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:textAlignment="center"
                            android:text="@string/meanwhile_you_can_use_our_ai_chatbot_n_for_your_help"
                            android:textColor="#6E6E6E"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_map_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_280sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <View
                            android:id="@+id/viewMap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@android:color/transparent"/>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/img_location"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_280sdp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/image_location_1"/>
                </LinearLayout>
<!--            </ScrollView>-->
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/sadow_layout"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>