<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/alert_dialog_box_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/cross_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Alert"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:fontFamily="@font/urbanist_bold" />

         <LinearLayout
             android:layout_marginHorizontal="@dimen/_20sdp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_40sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:orientation="vertical"
                 android:background="@drawable/bg_border">

                 <TextView
                     android:id="@+id/tv_Alert"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="Menu Label"
                     android:drawablePadding="@dimen/_10sdp"
                     android:textColor="#777777"
                     android:singleLine="true"
                     android:gravity="center|start"
                     android:textSize="@dimen/_12sdp"
                     android:paddingEnd="@dimen/_15sdp"
                     android:paddingStart="@dimen/_10sdp"
                     android:fontFamily="@font/urbanist_medium"
                     app:drawableEndCompat="@drawable/arrow_bottom" />
                 <androidx.recyclerview.widget.RecyclerView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/menu_recy"
                 android:visibility="gone"
                 app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

             </LinearLayout>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Select Alert Duration"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:textSize="@dimen/_13sdp"
                 android:textColor="@color/light_black"
                 android:layout_gravity="center|start"
                 android:fontFamily="@font/urbanist_semibold" />


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_40sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:orientation="vertical"
                 android:background="@drawable/bg_border">

                 <TextView
                     android:id="@+id/tv_Time"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="1 Minute"
                     android:drawablePadding="@dimen/_10sdp"
                     android:textColor="#777777"
                     android:singleLine="true"
                     android:gravity="center|start"
                     android:textSize="@dimen/_12sdp"
                     android:paddingEnd="@dimen/_15sdp"
                     android:paddingStart="@dimen/_10sdp"
                     android:fontFamily="@font/urbanist_medium"
                     app:drawableEndCompat="@drawable/arrow_bottom" />

                 <androidx.recyclerview.widget.RecyclerView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/time_recy"
                     android:visibility="gone"
                     app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


             </LinearLayout>

             <TextView
                 android:id="@+id/tv_save"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:background="@drawable/bg_share"
                 android:gravity="center"
                 android:text="Save"
                 android:layout_marginBottom="@dimen/_10sdp"
                 android:textColor="@color/white" />
         </LinearLayout>



    </LinearLayout>


</RelativeLayout>