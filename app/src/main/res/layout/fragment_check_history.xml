<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_select"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.main.CheckHistoryFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:src="@drawable/back_icon"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@color/transparent"/>

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/urbanist_bold"
        android:textColor="#000000"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:text="@string/check_history" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_country"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/lay_check_ins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/check_ins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_ins"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:textColor="#0B0202"
                    />
                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#0B0202"
                    android:layout_marginTop="@dimen/_6sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_responds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/responds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/responds"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:textColor="#777777"

                    />
                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#0B0202"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_6sdp"
                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcy_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



    </LinearLayout>


    <include
        layout="@layout/sadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>