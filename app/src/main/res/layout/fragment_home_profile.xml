<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_select"
    tools:context=".fragment.main.HomeProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backBtn"
                android:contentDescription="TODO"
                android:src="@drawable/back_icon"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@color/transparent"/>

            <!-- Header Section -->
            <RelativeLayout
                android:id="@+id/layheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <TextView
                    android:id="@+id/tv_myprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:text="@string/my_profile" />

                <RelativeLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_myprofile"
                    android:layout_marginTop="@dimen/_20sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        app:civ_border_width="@dimen/_2sdp"
                        app:civ_border_color="#FF1A69B4"
                        android:src="@drawable/user_img_icon" />

                    <ImageView
                        android:id="@+id/img_upload"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/upload_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <!-- Input Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">
                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_name"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@null" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">
                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_email"
                    android:layout_toLeftOf="@+id/email_status"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@null" />
                <ImageView
                    android:id="@+id/email_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_green_tick"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlemailverified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvemailstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Verified"
                    android:textColor="#219653" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">
                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_phone"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:layout_toLeftOf="@+id/phone_status"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@null" />
                <ImageView
                    android:id="@+id/phone_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_cancel_red_icon"
                    android:visibility="gone" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlphoneverified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvphonestatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Verified"
                    android:textColor="#219653" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_border">
               <!-- <EditText
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_address"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@null" />-->
                <AutoCompleteTextView
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:hint="@string/enter_address" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/imgCheckUncheckRemember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/uncheck_blue_tick_icon" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="#000000"
                            android:fontFamily="@font/urbanist_medium"
                            android:text="@string/agree_to_the"/>

                        <TextView
                            android:id="@+id/termAndCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="#FF0F87CD"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:text="@string/terms_conditions1"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="#000000"
                        android:fontFamily="@font/urbanist_medium"
                        android:text="@string/privacy_policy"/>
                </LinearLayout>
            </LinearLayout>


            <!-- Save Button -->
            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:text="@string/edit"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>
    <!-- Footer Include -->
    <include
        layout="@layout/sadow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
