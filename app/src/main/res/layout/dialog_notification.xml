<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center|end"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/cross_icon"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="22sp"
                android:fontFamily="@font/urbanist_bold"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/id_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center|top">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/dummy_image" />

                <include
                    android:id="@+id/layProgess"
                    layout="@layout/progess_loader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center|start"
                            android:textStyle="bold"
                            android:layout_toStartOf="@+id/tv_time"
                            android:text="Alex Linderson"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center|start"
                            android:text="2 min ago"
                            android:textColor="#717984"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center|start"
                            android:text="Alert : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvAlertName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center|start"
                            android:text="Medical Alert"
                            android:textColor="#717984"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center|start"
                            android:text="@string/relation"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvRelationType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_medium"
                            android:gravity="center|start"
                            android:text=" Dad"
                            android:textColor="#717984"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/urbanist_medium"
                        android:gravity="center|start"
                        android:text=""
                        android:textColor="#717984"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tvView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="View"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_marginBottom="@dimen/_8sdp"
               android:textColor="@color/white"
               android:layout_gravity="center"
               android:textSize="@dimen/_12sdp"
               android:layout_marginEnd="@dimen/_5sdp"
               android:gravity="center"
               android:fontFamily="@font/urbanist_bold"
               android:background="@drawable/delete_bg_button"/>

           <TextView
               android:id="@+id/tvCancel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cancel"
               android:fontFamily="@font/urbanist_bold"
               android:textSize="@dimen/_12sdp"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_marginBottom="@dimen/_8sdp"
               android:textColor="#000000"
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_gravity="center"
               android:gravity="center"
               android:background="@drawable/bg_no"/>
       </LinearLayout>
    </LinearLayout>


</RelativeLayout>