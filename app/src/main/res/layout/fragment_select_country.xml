<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_select"
    tools:context=".fragment.auth.SelectCountryFragment">
    <LinearLayout
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/back_icon"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/img_back"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/layheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <LinearLayout
                    android:id="@+id/btn_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RelativeOverlap">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:fontFamily="@font/urbanist_medium"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:text="@string/skip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/urbanist_bold"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"
                    android:text="@string/country" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#000000"
                    android:layout_below="@id/tv_country"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/please_select_your_country" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_dropdown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@id/layheader"
                android:background="@drawable/bg_border">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@string/select_country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    app:drawableEndCompat="@drawable/arrow_bottom"
                    app:drawableStartCompat="@drawable/usa_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rcy_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_dropdown"
                android:visibility="gone"
                android:background="@drawable/bg_border"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_country"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <TextView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@drawable/button_bg"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>