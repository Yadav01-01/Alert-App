<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/id_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center|top"
            android:src="@drawable/dummy_image" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:textStyle="bold"
                    android:id="@+id/tvName"
                    android:text="Alfredo Calzoni"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:text="Lorem ipsum dolor"
                    android:visibility="gone"
                    android:textColor="#717984"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:id="@+id/tvAddress"
                    android:text="138 My Street, Kingston,  New York"
                    android:textColor="#717984"
                    android:textSize="@dimen/_10sdp"
                    app:drawableStartCompat="@drawable/location_check_in" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:id="@+id/tvPhone"
                    android:text="+91 000 0000"
                    android:textColor="#717984"
                    android:textSize="@dimen/_10sdp"
                    app:drawableStartCompat="@drawable/call_icon_nearby" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/urbanist_medium"
                    android:gravity="center|start"
                    android:id="@+id/tvEmail"
                    android:text="example@gmail.com"
                    android:textColor="#717984"
                    android:textSize="@dimen/_10sdp"
                    app:drawableStartCompat="@drawable/baseline_mail_outline_24" />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


    <View
        android:layout_below="@id/id_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#E5E5E5"/>


</RelativeLayout>