<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_dialog_box_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/cross_icon"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/check"/>

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self Alert Data"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="30sp"
            android:fontFamily="@font/urbanist_bold"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Please check in to I am safe, if\neverything is fine."
            android:textColor="@color/light_black"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:fontFamily="@font/urbanist_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="-15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am Safe"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:fontFamily="@font/urbanist_medium"
                android:textSize="16sp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/delete_bg_button"/>

            <TextView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_needed"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="#000000"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/urbanist_medium"
                android:background="@drawable/bg_no"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date_And_Time_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="#6D6D6D"
                android:fontFamily="@font/urbanist_medium"
                android:text="Responded Date &amp; Time - 08/31/2024 09:20"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>