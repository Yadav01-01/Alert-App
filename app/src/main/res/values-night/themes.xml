<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlertApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="colorPrimary">#FF264B9B</item>
        <item name="colorPrimaryVariant">#FF264B9B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF264B9B</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
    </style>

    <style name="roundedImageView2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="TopCornersRoundedCard">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.MediumComponent.TopCorners</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.MediumComponent.TopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_25sdp</item>
        <item name="cornerSizeTopRight">@dimen/_25sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <!-- Custom style for TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">#8B8B8B</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="endIconDrawable">@drawable/arrow_bottom</item>
        <item name="endIconTint">@color/black</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <!-- Custom style for MaterialAutoCompleteTextView -->
    <style name="CustomMaterialAutoCompleteTextView">
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:inputType">none</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="CustomDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:divider">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#1294F2</item>
        <item name="colorPrimary">#2D072D</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>