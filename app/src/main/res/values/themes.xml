<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlertApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#FF264B9B</item>
        <item name="colorPrimaryVariant">#FF264B9B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF264B9B</item>
        <item name="colorSecondaryVariant">#FF264B9B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
    </style>


    <!-- res/values/styles.xml -->
    <style name="CustomNumberPickerTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:colorControlNormal">#FFFFFF</item> <!-- Text color -->
        <item name="android:colorAccent">#FF6D6D</item> <!-- Selector color -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="CustomDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:divider">@color/white</item>

    </style>


    <style name="roundedImageView2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>


    <style name="TopCornersRoundedCard">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.MediumComponent.TopCorners</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.MediumComponent.TopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_25sdp</item>
        <item name="cornerSizeTopRight">@dimen/_25sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#1294F2</item>
        <item name="colorPrimary">#2D072D</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.AlertApp" parent="Base.Theme.AlertApp" />

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>